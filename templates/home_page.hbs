<div class="container-home">
  {{#if signed_in}}
   {{else}}
   <section class="articles">
    <h2>{{dc 'plus_d_articles'}}</h2>
   </section>
   {{/if}}
  {{#if promoted_articles}}
      <section class="articles">
        <h1>{{t 'promoted_articles'}}</h1>
        <ul class="article-list promoted-articles">
          {{#each promoted_articles}}
            <li class="promoted-articles-item">
                <a href="{{url}}">
                  {{title}}

                  {{#if internal}}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
                      <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1"/>
                      <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5"/>
                    </svg>
                  {{/if}}
                </a>
            </li>
          {{/each}}
        </ul>
      </section>
    {{/if}}
  <section class="section knowledge-base">
    <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
          {{#if ../has_multiple_categories}}
        {{#is name 'Alertes'}}
        {{else}} 
            <li class="blocks-item">
             
					<!--agreo-->
					{{#is id 115000817009}}
                    <a href='{{url}}' class="logoCategory" style="background-image: url({{asset id  suffix='_orange.svg'}})" onmouseover="this.style.backgroundImage='url({{asset id suffix='_blanc.svg'}})';" onmouseout="this.style.backgroundImage='url({{asset id suffix='_orange.svg'}})';" > </a>
                    {{else}} 
					<!--Diagnostic-->
					{{#is id 360000740278}}
                       <a href='{{url}}' class="logoCategory" style="background-image: url({{asset 'trace_orange.svg'}})" onmouseover="this.style.backgroundImage='url({{asset 'trace_blanc.svg'}})';" onmouseout="this.style.backgroundImage='url({{asset 'trace_orange.svg'}})';" > </a>

                    {{else}} 
					<!--Smag Farmer-->
					{{#is id 360000072397}}
                       <a href='{{url}}' class="logoCategory" style="background-image: url({{asset 'smag_farmer_orange.svg'}})" onmouseover="this.style.backgroundImage='url({{asset 'smag_farmer_blanc.svg'}})';" onmouseout="this.style.backgroundImage='url({{asset 'smag_farmer_orange.svg'}})';" > </a>
                    {{else}} 
					<!--Smag Expert-->
					{{#is id 360000072417}}
                       <a href='{{url}}' class="logoCategory" style="background-image: url({{asset 'smag_expert_orange.svg'}})" onmouseover="this.style.backgroundImage='url({{asset 'smag_expert_blanc.svg'}})';" onmouseout="this.style.backgroundImage='url({{asset 'smag_expert_orange.svg'}})';" > </a>

                    {{else}} 
					<!--Smag Bovin-->
					{{#is id 360000352777}}
                       <a href='{{url}}' class="logoCategory" style="background-image: url({{asset id  suffix='_orange.svg'}})" onmouseover="this.style.backgroundImage='url({{asset id  suffix='_blanc.svg'}})';" onmouseout="this.style.backgroundImage='url({{asset id suffix='_orange.svg'}})';" > </a>
                    {{else}} 
					<!--LEA-->
					{{#is id 115000506065}}
                       <a href='{{url}}' class="logoCategory" style="background-image: url({{asset 'LEA_vert.svg'}})" onmouseover="this.style.backgroundImage='url({{asset 'LEA_blanc.svg'}})';" onmouseout="this.style.backgroundImage='url({{asset 'LEA_vert.svg'}})';" > </a>
                    {{else}} 
					<!--DATALABS-->
					{{#is id 1234567}}
                       <a href='{{url}}' class="logoCategory" style="background-image: url({{asset 'datalabs_gris.svg'}})" onmouseover="this.style.backgroundImage='url({{asset 'datalabs_blanc.svg'}})';" onmouseout="this.style.backgroundImage='url({{asset 'datalabs_gris.svg'}})';" > </a>
                    {{else}} 
					{{#is id 360001298577}}
					 <a href='{{url}}' class="logoCategory" style="background-image: url({{asset 'MySmag_Aide.png'}})" onmouseover="this.style.backgroundImage='url({{asset 'MySmag_Aide_Hover.png'}})';" onmouseout="this.style.backgroundImage='url({{asset 'MySmag_Aide.png'}})';" > </a>
					{{else}} 
					<!--autres-->
                    <a href='{{url}}' class="testOther blocks-item-link">{{name}}</a>  {{/is}} {{/is}} {{/is}} {{/is}} {{/is}} {{/is}} {{/is}}{{/is}}
              
            </li>
        {{/is}}
          {{else}}
            {{#each sections}}
              <li class="blocks-item">
                <a href='{{url}}' class="blocks-item-link">
                  <span class="blocks-item-title">
                    {{name}}
                  </span>
                  <span class="blocks-item-description">{{excerpt description}}</span>
                </a>
              </li>
            {{/each}}
          {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>

    
  </section>

